{% extends "/base.jinja2" %}

{% block head %}
{% endblock %}

{% block body %}
    <div id="search_div">
    <form action="">
      Receipt ID: <input type="text" name="receipt_id">
      <input type="submit" value="Search" class="btn-primary">
    </form>
</div>
<br>
    {% if scans %}
    <div class="panel panel-default">
      <div class="panel-heading">
         Receipt_ID: {{ scans[0].receipt_id }}<br>
         Total: ${{ scans[0].receipt_total }}<br>
         Card Type: {{ scans[0].credit_card_type }}
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
        <th>Quantity</th>
        <th>Item</th>
        <th>Price</th>
        <th>Amount</th>
        {% for scan in scans %}
            <tr>
            <td>{{ scan.quantity }}</td>
            <td><a href="/web/product?product_id={{ scan.product_id }}">{{ scan.product_name }}</a></td>
            <td>${{ scan.unit_price }}</td>
            <td>${{ scan.total }}</td>
            </tr>
        {% endfor %}
        </table>

      </div>
    </div>

    {% endif %}

{% endblock %}

{% block tail %}
{% endblock %}
