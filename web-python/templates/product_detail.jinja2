{% extends "/base.jinja2" %}

{% block head %}
{% endblock %}

{% block body %}
    <div id="search_div">
    <form action="">
      Product_ID: <input type="text" name="product_id">
      <input type="submit" value="Search" class="btn-primary">
    </form>
</div>
<br>
    <div class="panel panel-default">
      <div class="panel-heading">{{ product.title }}</div>
      <div class="panel-body">
          <table class="table-striped table-hover">
              <tr><td>URL:</td><td><a href="{{ product.url }}">{{ product.url }}</a></td></tr>
              <tr><td>Brand:</td><td><a href="/web/product_search?brand_id={{ product.supplier_id }}">{{ product.supplier_name }}</a></td></tr>
              <tr><td>Category:</td><td><a href="/web/product_search?category_name={{ product.category_name }}">{{ product.category_name }}</a></td></tr>
              <tr><td>Release Date:</td><td>{{ product.release_date }}</td></tr>
              <tr><td>Description:</td><td>{{ product.short_description }}</td></tr>
              <tr><td>Details:</td><td>{{ product.long_description }}</td></tr>
          </table>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">Features</div>
      <div class="panel-body">
        <table width="1000" class="table table-striped table-hover">
          <th>Feature</th>
          <th>Description</th>
          {% if features %}
              {% for key in features %}
                  <tr>
                  <td>{{ key }}</td>
                  <td>{{ features[key] }}</td>
                  </tr>
              {% endfor %}
           {% endif %}
          </table>
      </div>
    </div>
{% endblock %}

{% block tail %}
{% endblock %}
